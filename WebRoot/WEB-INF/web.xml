<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"> 
  
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>GetCount</servlet-name>
    <servlet-class>com.pg.servlet.GetCount</servlet-class>
  </servlet>
  
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>GetAllOrders</servlet-name>
    <servlet-class>com.pg.servlet.GetAllOrders</servlet-class>
  </servlet>   
  
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>GetAllGoods</servlet-name>
    <servlet-class>com.pg.servlet.GetAllGoods</servlet-class>
  </servlet> 
  
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>DeleteGoods</servlet-name>
    <servlet-class>com.pg.servlet.DeleteGoods</servlet-class>
  </servlet> 
  
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>AddGoods</servlet-name>
    <servlet-class>com.pg.servlet.AddGoods</servlet-class>
  </servlet> 
  
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>GetOneGoods</servlet-name>
    <servlet-class>com.pg.servlet.GetOneGoods</servlet-class>
  </servlet>  
  
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>UpdateGoods</servlet-name>
    <servlet-class>com.pg.servlet.UpdateGoods</servlet-class>
  </servlet> 
  
  <servlet-mapping>
    <servlet-name>GetCount</servlet-name>
    <url-pattern>/GetCount</url-pattern>
  </servlet-mapping>
    
  <servlet-mapping>
    <servlet-name>GetAllOrders</servlet-name>
    <url-pattern>/GetAllOrders</url-pattern>
  </servlet-mapping> 
  
  <servlet-mapping>
    <servlet-name>GetAllGoods</servlet-name>
    <url-pattern>/GetAllGoods</url-pattern>
  </servlet-mapping> 
  
  <servlet-mapping>
    <servlet-name>DeleteGoods</servlet-name>
    <url-pattern>/DeleteGoods</url-pattern>
  </servlet-mapping> 
  
  <servlet-mapping>
    <servlet-name>AddGoods</servlet-name>
    <url-pattern>/AddGoods</url-pattern>
  </servlet-mapping>   
  
  <servlet-mapping>
    <servlet-name>GetOneGoods</servlet-name>
    <url-pattern>/GetOneGoods</url-pattern>
  </servlet-mapping> 
  
  <servlet-mapping>
    <servlet-name>UpdateGoods</servlet-name>
    <url-pattern>/UpdateGoods</url-pattern>
  </servlet-mapping>  
   
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
</web-app>
